<Page xmlns:my="using:DevExpress.UI.Xaml.Grid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls" 
    x:Class="Uwp_App5.Views.MainPage"
   
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <FlyoutBase.AttachedFlyout>
            <Custom:CommandBarFlyout/>
        </FlyoutBase.AttachedFlyout>
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">

            <my:GridControl x:Name="dxGrid" AutoGenerateColumns="True" ShowFixedTotalSummary="False" SearchPanelAllowFilter="True" HorizontalAlignment="Left"  SearchColumns="Name"  ShowSearchPanelMode="Always">
                <my:GridControl.Columns>
                  
                </my:GridControl.Columns>
            </my:GridControl>


        </Grid>
    </Grid>
</Page>

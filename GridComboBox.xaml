    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:my1="using:DevExpress.UI.Xaml.Grid"
             mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>

        <StackPanel Orientation="Vertical">
            <TextBlock>
                Search Item:
            </TextBlock>
            <SearchBox x:Name="search" Width="280" Margin="6,4,4,4" HorizontalAlignment="Left" QueryChanged="search_QueryChanged" MinWidth="200"></SearchBox>

            <my1:GridControl Name="MyGrid" Height="100" Width="280"   Margin="6,4,4,4" HorizontalAlignment="Left" MinWidth="200" >
                
               

            </my1:GridControl>
        </StackPanel>


    </Grid>
